doctype html
-var stepWidth = 900
-var space = 1000;
block vars

html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    if title
      title #{title}
    if description
      meta(name='description', content='#{description}')
    if keywords 
      meta(name='description', content='#{keywords}')
    block head
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=2.0, user-scalable=1')
    meta(name='author', content='James J Nadeau')
    link(href='/styles/impressjs.css', rel='stylesheet', type='text/css')
    style .step { width: #{stepWidth}px; }
      

  body
    block content
      div !{content}
    
    block tools
      #impress-toolbar
      .impress-progressbar
        div
      .impress-progress


    
    script(src='/impress/impress.js')
    block scripts
        script.
            window.impress().init();
            var buttons = document.querySelectorAll('#impress-toolbar button');
            [].forEach.call(buttons, function(el) {
                el.classList.add('btn');
                el.classList.add('btn-outline-dark');
                el.classList.add('mx-1');
            });

            var select = document.querySelectorAll('#impress-toolbar select');
            [].forEach.call(select, function(el) {
                el.classList.add('form-control');
                el.classList.add('mx-1');
            });
            console.log('impress init done');