#impress()
  -var x = 0;
  -var y = 0;
  -var z = 0;
  -var space = 1000;
  .step()
    h1 Step One
    p Body text
    .notes I'm some presentation notes
      h3 with some formatting
      .text-center with centered text
  - x += space;
  .step(data-x=x)
    h1 Step Two
    p.substep Sub-step A
    p.substep Sub-step B
    p.substep Sub-step C
  - x += space;
  .step(data-x=x data-rotate="180")
    h1 Step Three upside down
    p Body text
  - x -= space;
  - z += space
  .step(data-x=x data-z=z)
    h1 Step Four Above
    p Body text
  - y += space;
  .step(data-x=x data-y=y data-z=z)
    h1 Step Five Down
    p Body text
  .step(data-rel-x=space)
    h1 Step Six Relative
    p Body text
    
        
